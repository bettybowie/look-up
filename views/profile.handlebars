<div class="card">
  <div class="img-bx">
    <img src="/public/css/img/look-up-bg.jpeg" alt="img" />
  </div>
        
  <div class="content">
    <div class="detail">
      <h2>{{username}}<br /><span>Welcome to my profile!</span></h2>
    </div>
  </div>
</div>

<div>
    <form method="post" enctype="multipart/form-data">
    <input type="file" name="files[]" multiple>
    <input type="submit" value="Upload Files" name="submit">
    </form>
</div>
{{#each posts as |post|}}
<div class="center">
    
    <div class="article-card">
      <div class="content">
        <p class="date">Posted on: {{format_date date_created}}</p>
      </div>
      <div>
        <a href="{{file_URL}}" target="_blank">
        <img src="{{file_URL}}" alt="article-cover" width="450px" height="450px"/>
      </a>
    </div>
    </div>
    
</div>
{{/each}}

<script  src="/public/js/upload.js"></script>